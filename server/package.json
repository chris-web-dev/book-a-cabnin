{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "format": "biome format . --write",
    "dev:db:generate": "drizzle-kit generate --config=drizzle.dev.config.ts",
    "dev:db:reset": "rm -f dev.db && bun run dev:db:migrate",
    "dev:db:migrate": "drizzle-kit migrate --config=drizzle.dev.config.ts",
    "prod:db:generate": "drizzle-kit generate --config=drizzle.prod.config.ts",
    "prod:db:migrate": "drizzle-kit migrate --config=drizzle.prod.config.ts"
  },
  "dependencies": {
    "drizzle-kit": "^0.31.6",
    "hono": "^4.7.11",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
